@@ -950,6 +953,9 @@ case "${target}" in
   *-*-rtems*)
     noconfigdirs="$noconfigdirs target-libgloss"
     ;;
+  *-*-zephyr*)
+    noconfigdirs="$noconfigdirs target-libgloss"
